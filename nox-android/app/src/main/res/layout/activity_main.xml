<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_neo">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/loginCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="14dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="14dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeColor="#00000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_panel_bg"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter NOX"
                android:textColor="@color/nox_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sign in and unlock your personal training stream"
                android:textColor="@color/nox_text_muted" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/providerGoogleButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/action_btn_dashboard_bg"
                    android:text="Google"
                    android:textColor="@color/nox_text"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/providerFacebookButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/action_btn_workout_bg"
                    android:text="Facebook"
                    android:textColor="@color/nox_text"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/providerGuestButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/action_btn_meal_bg"
                    android:text="Guest"
                    android:textColor="@color/nox_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg"
                android:hint="Your name"
                android:inputType="textPersonName"
                android:paddingHorizontal="12dp"
                android:textColor="@color/nox_text"
                android:textColorHint="@color/nox_text_muted" />

            <Button
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/cta_btn_bg"
                android:text="Launch Experience"
                android:textColor="@color/nox_text"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layoutDescription="@xml/scene_nox_main">

        <ImageView
            android:id="@+id/heroImage"
            android:layout_width="0dp"
            android:layout_height="380dp"
            android:contentDescription="NOX Hero"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/heroScrim"
            android:layout_width="0dp"
            android:layout_height="380dp"
            android:background="@drawable/hero_overlay" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/heroLottie"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:alpha="0.85"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/nox_energy_orbit" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="NOX"
            android:textColor="@color/nox_text"
            android:textSize="62sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleAltText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="NOX"
            android:textAllCaps="true"
            android:textColor="@color/nox_secondary"
            android:textSize="58sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taglineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Train smart. Fuel ruthless."
            android:textColor="@color/nox_secondary"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glow_chip_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Welcome"
            android:textColor="@color/nox_text"
            android:textSize="10sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/scanLine"
            android:layout_width="120dp"
            android:layout_height="3dp"
            android:background="@color/nox_primary" />

        <LinearLayout
            android:id="@+id/actionRail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/actionDashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/action_btn_dashboard_bg"
                android:fontFamily="sans-serif-condensed"
                android:text="Dashboard"
                android:textColor="@color/nox_text"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/actionWorkout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/action_btn_workout_bg"
                android:fontFamily="sans-serif-condensed"
                android:text="Workout"
                android:textColor="@color/nox_text"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/actionMeal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/action_btn_meal_bg"
                android:fontFamily="sans-serif-condensed"
                android:text="Meal"
                android:textColor="@color/nox_text"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/rootScroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingBottom="18dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/opsTicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ops_ticker_bg"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-condensed"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:singleLine="true"
                    android:text="EXPERIENCE CORE :: MOTION UI ACTIVE :: ADAPTIVE ATHLETE TRACKER :: NOX OS"
                    android:textColor="@color/nox_secondary"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/athlete_frame_bg"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <ImageView
                                android:id="@+id/boltImage"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="USAIN BOLT"
                                android:textColor="@color/nox_text"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/athlete_frame_bg"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <ImageView
                                android:id="@+id/cbumImage"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="CHRIS BUMSTEAD"
                                android:textColor="@color/nox_text"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/athlete_frame_bg"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <ImageView
                                android:id="@+id/phelpsImage"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="MICHAEL PHELPS"
                                android:textColor="@color/nox_text"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dashboardCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#00000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_panel_bg"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@drawable/card_top_glow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/module_chip_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:text="SCREEN 01"
                            android:textColor="@color/nox_text"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Dashboard"
                            android:textColor="@color/nox_text"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/module_divider" />

                        <TextView
                            android:id="@+id/dashboardText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/nox_text_muted" />

                        <Button
                            android:id="@+id/refreshButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/cta_btn_bg"
                            android:text="Refresh"
                            android:textColor="@color/nox_text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/workoutCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#00000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_panel_bg"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@drawable/card_top_glow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/module_chip_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:text="SCREEN 02"
                            android:textColor="@color/nox_text"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Workout"
                            android:textColor="@color/nox_text"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/module_divider" />

                        <EditText
                            android:id="@+id/workoutExerciseInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_bg"
                            android:hint="Exercise"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/nox_text"
                            android:textColorHint="@color/nox_text_muted" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/workoutSetsInput"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/input_bg"
                                android:hint="Sets"
                                android:inputType="number"
                                android:paddingHorizontal="10dp"
                                android:textColor="@color/nox_text"
                                android:textColorHint="@color/nox_text_muted" />

                            <EditText
                                android:id="@+id/workoutRepsInput"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/input_bg"
                                android:hint="Reps"
                                android:inputType="number"
                                android:paddingHorizontal="10dp"
                                android:textColor="@color/nox_text"
                                android:textColorHint="@color/nox_text_muted" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/workoutWeightInput"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/input_bg"
                                android:hint="Weight"
                                android:inputType="numberDecimal"
                                android:paddingHorizontal="10dp"
                                android:textColor="@color/nox_text"
                                android:textColorHint="@color/nox_text_muted" />

                            <EditText
                                android:id="@+id/workoutRpeInput"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/input_bg"
                                android:hint="RPE"
                                android:inputType="numberDecimal"
                                android:paddingHorizontal="10dp"
                                android:textColor="@color/nox_text"
                                android:textColorHint="@color/nox_text_muted" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/workoutDurationInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_bg"
                            android:hint="Duration (min)"
                            android:inputType="number"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/nox_text"
                            android:textColorHint="@color/nox_text_muted" />

                        <EditText
                            android:id="@+id/workoutNotesInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_bg"
                            android:hint="Notes"
                            android:inputType="textCapSentences|textMultiLine"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/nox_text"
                            android:textColorHint="@color/nox_text_muted" />

                        <Button
                            android:id="@+id/logWorkoutButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/cta_btn_bg"
                            android:text="Log Workout"
                            android:textColor="@color/nox_text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mealCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#00000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_panel_bg"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@drawable/card_top_glow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/module_chip_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:text="SCREEN 03"
                            android:textColor="@color/nox_text"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Nutrition"
                            android:textColor="@color/nox_text"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/module_divider" />

                        <EditText
                            android:id="@+id/mealNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_bg"
                            android:hint="Meal type"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/nox_text"
                            android:textColorHint="@color/nox_text_muted" />

                        <EditText
                            android:id="@+id/mealDescriptionInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_bg"
                            android:hint="Foods and quantity"
                            android:inputType="textCapSentences|textMultiLine"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/nox_text"
                            android:textColorHint="@color/nox_text_muted" />

                        <Button
                            android:id="@+id/logMealButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/cta_btn_bg"
                            android:text="Log Meal"
                            android:textColor="@color/nox_text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/ops_ticker_bg"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:text="Ready"
                    android:textColor="@color/nox_blue_glow"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.motion.widget.MotionLayout>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nox_bg"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loadingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOX"
                android:textColor="@color/nox_primary"
                android:textSize="68sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="booting NOX.PROTOCOL"
                android:textColor="@color/nox_text"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/loadingPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0%"
                android:textColor="@color/nox_text"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/loadingProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/loading_progress_neo" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
