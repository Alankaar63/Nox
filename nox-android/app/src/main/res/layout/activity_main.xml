<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/nox_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOX"
            android:textColor="@color/nox_text"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taglineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Train smart, fuel ruthless"
            android:textColor="@color/nox_text_muted" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeColor="#00000000"
            app:cardElevation="0dp"
            app:cardCornerRadius="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_panel_bg"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textColor="@color/nox_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dashboardText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Loading..."
                    android:textColor="@color/nox_text_muted" />

                <Button
                    android:id="@+id/refreshButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/nox_primary"
                    android:textColor="@color/nox_text"
                    android:text="Refresh" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeColor="#00000000"
            app:cardElevation="0dp"
            app:cardCornerRadius="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_panel_bg"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Workout"
                    android:textColor="@color/nox_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/workoutExerciseInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:hint="Exercise"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/nox_text"
                    android:textColorHint="@color/nox_text_muted"
                    android:inputType="text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/workoutSetsInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input_bg"
                        android:hint="Sets"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/nox_text"
                        android:textColorHint="@color/nox_text_muted"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/workoutRepsInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input_bg"
                        android:hint="Reps"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/nox_text"
                        android:textColorHint="@color/nox_text_muted"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/workoutWeightInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input_bg"
                        android:hint="Weight"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/nox_text"
                        android:textColorHint="@color/nox_text_muted"
                        android:inputType="numberDecimal" />

                    <EditText
                        android:id="@+id/workoutRpeInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input_bg"
                        android:hint="RPE"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/nox_text"
                        android:textColorHint="@color/nox_text_muted"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <EditText
                    android:id="@+id/workoutDurationInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:hint="Duration (minutes)"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/nox_text"
                    android:textColorHint="@color/nox_text_muted"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/workoutNotesInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:hint="Notes"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/nox_text"
                    android:textColorHint="@color/nox_text_muted"
                    android:inputType="textCapSentences|textMultiLine" />

                <Button
                    android:id="@+id/logWorkoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/nox_primary"
                    android:textColor="@color/nox_text"
                    android:text="Log Workout" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeColor="#00000000"
            app:cardElevation="0dp"
            app:cardCornerRadius="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_panel_bg"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Meal"
                    android:textColor="@color/nox_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/mealNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:hint="Meal name (lunch, dinner...)"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/nox_text"
                    android:textColorHint="@color/nox_text_muted"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/mealDescriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:hint="Foods (e.g. 150g chicken breast, 1 banana)"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/nox_text"
                    android:textColorHint="@color/nox_text_muted"
                    android:inputType="textCapSentences|textMultiLine" />

                <Button
                    android:id="@+id/logMealButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/nox_primary"
                    android:textColor="@color/nox_text"
                    android:text="Log Meal" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Ready"
            android:textColor="@color/nox_accent" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
