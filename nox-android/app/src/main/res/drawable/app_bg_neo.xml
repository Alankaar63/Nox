                android:startColor="#090B10"
                android:centerColor="#05070A"
                android:endColor="#020203" />
        </shape>
    </item>
    <item android:top="-120dp" android:left="-60dp" android:right="120dp" android:bottom="420dp">
        <shape android:shape="oval">
            <gradient
                android:angle="315"
                android:startColor="#66FF3157"
                android:endColor="#00FF3157" />
        </shape>
    </item>
    <item android:top="220dp" android:left="140dp" android:right="-80dp" android:bottom="-120dp">
        <shape android:shape="oval">
            <gradient
                android:angle="180"
